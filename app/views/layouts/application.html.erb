<!DOCTYPE html>
<html>
  <head>
    <title>PDF製本データくん</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <div id="logo">
        <%= link_to @logo, "/" + @language %>
      </div>
      <div id="select_language_wrapper">
        <%= link_to @change_language_message, request.path_info.gsub(@language, @other_language) %>
      </div>
    </header>
    <div id="flash">
      <% if flash %>
        <% flash.each do |message_type, message| %>
          <%= message %>
        <% end %>
      <% end %>
    </div>
    <%= yield %>
    <footer>
      <%= @footer %>
    </footer>
  </body>
</html>
